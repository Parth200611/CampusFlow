<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADMISSION  FROM"
            android:textColor="@color/blue"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:fontFamily="sans-serif-medium"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill the form for admission"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#565656"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16sp"
            android:textSize="14sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rtregistername"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="text"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            />  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of birth"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16sp"
        android:textSize="14sp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etdateofbirth"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="text"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16sp"
        android:textSize="14sp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etbloodgroup"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="text"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cast"
            android:textColor="#565656"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16sp"
            android:textSize="14sp"
            />

        <Spinner
            android:id="@+id/spinnercast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextback"
            android:padding="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adhar No"
            android:textColor="#565656"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16sp"
            android:textSize="14sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etregisteradharno"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="number"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            /> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16sp"
        android:textSize="14sp"
        />

        <EditText
            android:id="@+id/etregisteraddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16sp"
            android:background="@drawable/edittextback"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nationality"
            android:textColor="#565656"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16sp"
            android:textSize="14sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNationality"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="number"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNumber"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="number"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerbarnch"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:background="@drawable/edittextback"
            android:padding="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admission Year"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinneradmissionyear"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:background="@drawable/edittextback"

            android:layout_marginTop="5dp"
            android:padding="20dp"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Examination"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerlastexam"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:background="@drawable/edittextback"
            android:padding="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Examination Percentage"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPercentage"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="number"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father Name"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etfathername"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="text"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Father Contact No"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etfathernumber"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="number"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            /><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="#565656"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:textSize="14dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etfatheraddress"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:inputType="text"
            android:background="@drawable/edittextback"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="21sp"
            android:id="@+id/btnsubmitform"
            android:background="@color/blue"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_marginBottom="100dp"
            />

    </LinearLayout>

</ScrollView>