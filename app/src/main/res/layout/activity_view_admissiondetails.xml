<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR ADMISSION DETAILS"
            android:textColor="@color/blue"
            android:textSize="26dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="16sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="10sp"
                    android:id="@+id/cvimage"
                    android:src="@drawable/baseline_person_24"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cvimage"
                    android:orientation="horizontal"
                    android:layout_marginTop="16sp"
                    android:id="@+id/ll1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="16sp"
                        android:layout_marginStart="3sp"
                        android:id="@+id/tvname"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cvimage"
                    android:orientation="horizontal"
                    android:layout_marginTop="6sp"
                    android:layout_below="@id/ll1"
                    android:id="@+id/ll2"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Exam:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="16sp"
                        android:layout_marginStart="3sp"
                        android:id="@+id/tvExam"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cvimage"
                    android:orientation="horizontal"
                    android:layout_marginTop="6sp"
                    android:layout_below="@id/ll2"
                    android:id="@+id/ll3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percentage:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percentage:"
                        android:textSize="16sp"
                        android:layout_marginStart="3sp"
                        android:id="@+id/tvPercentage"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cvimage"
                    android:orientation="horizontal"
                    android:layout_marginTop="6sp"
                    android:layout_below="@id/ll3"
                    android:id="@+id/ll4"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From No:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percentage:"
                        android:textSize="16sp"
                        android:layout_marginStart="3sp"
                        android:id="@+id/tvFromno"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cvimage"
                    android:orientation="horizontal"
                    android:layout_marginTop="6sp"
                    android:layout_below="@id/ll4"
                    android:id="@+id/ll5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percentage:"
                        android:textSize="16sp"
                        android:layout_marginStart="3sp"
                        android:id="@+id/tvBranch"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6sp"
                    android:layout_below="@id/cvimage"
                    android:id="@+id/ll6"
                    android:layout_marginStart="10sp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admission Year:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percentage:"
                        android:textSize="16sp"
                        android:layout_marginStart="3sp"
                        android:id="@+id/tvAdmissionYear"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6sp"
                    android:layout_below="@id/ll6"
                    android:layout_marginStart="10sp"
                    android:id="@+id/ll7"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth:"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percentage:"
                        android:textSize="16sp"
                        android:layout_marginStart="3sp"
                        android:id="@+id/tvdob"
                        />
                </LinearLayout>  <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6sp"
                android:layout_below="@id/ll7"
                android:layout_marginStart="10sp"
                android:id="@+id/ll8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adhar No:"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percentage:"
                    android:textSize="16sp"
                    android:layout_marginStart="3sp"
                    android:id="@+id/tvadhrno"
                    />
            </LinearLayout> <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6sp"
                android:layout_below="@id/ll8"
                android:layout_marginStart="10sp"
                android:id="@+id/ll9"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact No:"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percentage:"
                    android:textSize="16sp"
                    android:layout_marginStart="3sp"
                    android:id="@+id/tvcontactno"
                    />
            </LinearLayout> <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6sp"
                android:layout_below="@id/ll9"
                android:layout_marginStart="10sp"
                android:id="@+id/ll10"
                android:layout_marginBottom="16sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percentage:"
                    android:textSize="16sp"
                    android:layout_marginStart="3sp"
                    android:id="@+id/tvEmail"
                    />
            </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documents Images"
            android:layout_marginTop="16sp"
            android:layout_marginStart="16sp"
            android:textSize="21dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="16sp"
            android:id="@+id/ivarcimage"
            /> <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:id="@+id/ivcast"
        /> <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:id="@+id/ivadhrcard"
        /><ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:id="@+id/ivmarsheet"
        android:layout_marginBottom="60dp"

        />

    </LinearLayout>
</ScrollView>